rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // units/{unitId}/knowledge_base/... – erre töltesz most
    match /units/{unitId}/knowledge_base/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // minden más tiltva
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
