rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // 1) Tudástár – egységenként
    match /units/{unitId}/knowledge_base/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // 2) Egység logók – publikus olvasás, írás auth-hoz kötve
    match /unit_logos/{unitId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 3) Felhasználó saját fájljai
    match /user_files/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }

    // 4) Minden más tiltva
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
