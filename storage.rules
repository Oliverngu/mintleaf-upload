rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // units/{unitId}/knowledge_base/... fájlok
    match /units/{unitId}/knowledge_base/{allPaths=**} {
      // csak bejelentkezett felhasználók tölthetnek fel vagy olvashatnak
      allow read, write: if request.auth != null;
    }

    // későbbre: például ha publikus logók is lesznek
    // match /unit_logos/{allPaths=**} {
    //   allow read: if true;
    //   allow write: if request.auth != null;
    // }

    // minden más tiltva
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
